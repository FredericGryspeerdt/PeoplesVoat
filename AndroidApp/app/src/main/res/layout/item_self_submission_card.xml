<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_self_submission"
    card_view:cardBackgroundColor="@color/cardBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_user"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ForrestFlump"
                android:id="@+id/tvUser"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imgUser" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hr ago"
                android:id="@+id/tvTime"
                android:layout_below="@+id/tvUser"
                android:layout_toEndOf="@+id/imgUser" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgPopupMenu"
                android:layout_alignParentEnd="false"
                android:src="@drawable/ic_more_vert"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="false" />
        </RelativeLayout>

        <View style="@style/Divider"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lorem ipsum dolor sit amet, ius eu agam mucius, eruditi percipit adipiscing usu id. Wisi eripuit dolorum at nam, duo alia melius ea. Vis no Debet senserit maluisset usu at. Mei ne apeirian democritum."
            android:id="@+id/tvTitle"
            android:layout_marginTop="5dp"
            android:maxLength="200"
            android:layout_marginBottom="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris eleifend felis et orci condimentum suscipit. Cras suscipit velit arcu. Integer in gravida elit. Cras eget tellus ut libero mollis pharetra. Vivamus et ultricies neque. Vivamus luctus magna a tincidunt pharetra. Nunc fermentum fringilla neque, vel rutrum augue varius a. Aenean semper pretium nisi, nec tincidunt ex.  Nulla ut felis nulla. Praesent eu risus pellentesque est lacinia ultricies eu nec nisi. Nunc dapibus lorem eu libero finibus suscipit vitae quis nibh. Vivamus vehicula ultricies justo, in cursus mauris interdum in. Quisque non ipsum gravida, porttitor dui quis, eleifend libero. Sed turpis."
                android:id="@+id/tvContent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:maxLines="4"
                android:ellipsize="end" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarContent"
                android:layout_centerInParent="true"
                android:indeterminate="false" />
        </RelativeLayout>

        <View style="@style/Divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgUpvote"
                android:src="@drawable/ic_thumb_up"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvVoteCount"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imgUpvote"
                android:text="159"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgDownVote"
                android:src="@drawable/ic_thumb_down"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tvVoteCount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCommentCount"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:autoText="false"
                android:gravity="right"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="23"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_message"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tvCommentCount" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>